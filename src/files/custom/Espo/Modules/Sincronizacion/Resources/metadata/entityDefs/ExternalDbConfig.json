{
  "fields": {
    "name": {
      "type": "varchar",
      "required": true,
      "maxLength": 150,
      "tooltip": true
    },
    "host": {
      "type": "varchar",
      "required": true,
      "maxLength": 255,
      "tooltip": true,
      "readOnly": false
    },
    "port": {
      "type": "int",
      "required": true,
      "default": 3306,
      "min": 1,
      "max": 65535
    },
    "database": {
      "type": "varchar",
      "required": true,
      "maxLength": 255
    },
    "username": {
      "type": "varchar",
      "required": true,
      "maxLength": 255
    },
    "password": {
      "type": "password",
      "required": true,
      "maxLength": 500
    },
    "notificationEmail": {
      "type": "varchar",
      "required": false,
      "maxLength": 255,
      "tooltip": true
    },
    "isActive": {
      "type": "bool",
      "default": true
    },
    "lastSync": {
      "type": "datetime",
      "readOnly": true
    },
    "lastSyncStatus": {
      "type": "enum",
      "options": ["success", "warning", "error", "never"],
      "default": "never",
      "readOnly": true,
      "style": {
        "success": "success",
        "warning": "warning",
        "error": "danger",
        "never": "default"
      }
    },
    "description": {
      "type": "text",
      "rows": 4
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true
    }
  },
  "links": {
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "syncLogs": {
      "type": "hasMany",
      "entity": "SyncLog",
      "foreign": "config"
    }
  },
  "collection": {
    "orderBy": "createdAt",
    "order": "desc"
  }
}